local es={}
local p=nil
local msg=""

function _init()
 p=new_e(1,1)
 add(es, new_e(10,1))
end

function _update60()
 
 if btn(⬅️) then p.cx=-1
	elseif btn(➡️) then p.cx=1
	else p.cx=0
	end
 if p.cx==0 then
  if btn(⬆️) then p.cy=-1
	 elseif btn(⬇️) then p.cy=1
	 else p.cy=0
	 end
	else
	 p.cy=0
 end
 
 update_e(p)
 p.spd=0.72
 for e in all(es) do
	 update_e(e)
	 e.spd=0.51
	 e.cx=flr(rnd(3)-1)
	end
end

function _draw()
 cls()
 map(0,0)
 for e in all(es) do
  draw_e(e)
 end
 draw_e(p)
 if #es>0 and p.tx==es[1].tx then
 	rect(p.tx*8,p.ty*8,p.tx*8+8,p.ty*8+8,10)
 end
 print(msg,1,1,1)
end
