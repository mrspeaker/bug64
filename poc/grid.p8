function new_e(tx,ty)
	local e={}
	e.tx=tx
	e.ty=ty
	e.xo=0
	e.yo=0
	e.s=1
	e.spd=1
	e.cx=0
	e.cy=0
	e.dx=0
	e.dy=0
	return e
end

function draw_e(e)
 rect(e.tx*8,e.ty*8,e.tx*8+8,e.ty*8+8,2)
	spr(e.s,e.tx*8+e.xo,e.ty*8+e.yo)
end

function update_e(e)
 local ntx=e.tx+(e.dx==0and 0 or sgn(e.dx))
 local nty=e.ty+(e.dy==0and 0 or sgn(e.dy))
 msg=ntx..":"..nty..":"..mget(ntx,nty)
   
 if e.dx==0 and e.dy==0 then
  if e.cx==0 and e.cy==0 then
   e.xo=0
   e.yo=0
  else
   local ntx=e.tx+(e.cx==0and 0 or sgn(e.cx))
   local nty=e.ty+(e.cy==0and 0 or sgn(e.cy))
 
   // check if e.cx/e.cy ok.
   if mget(ntx,nty)==0 then
    if e.cx!=0 then
  	  e.dx=e.spd*sgn(e.cx)
  	 end
    if e.cy!=0 then
  	  e.dy=e.spd*sgn(e.cy)
  	 end
  	end
  end
	end
	
 if e.dx!=0 then
		e.xo+=e.dx
		e.s=1
		if abs(e.xo)>=8 then
			e.tx+=1*sgn(e.dx)
			e.xo+=-8*sgn(e.dx)
			e.dx=0
			e.s=17
		end
	end
	
	if e.dy!=0 then
		e.yo+=e.dy
		if abs(e.yo)>=8 then
			e.ty+=1*sgn(e.dy)
			e.yo+=-8*sgn(e.dy)
			e.dy=0
		end
	end
	
	
end


